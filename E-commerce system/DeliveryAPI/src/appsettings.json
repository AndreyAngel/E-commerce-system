{
  "ConnectionStrings": {
    "DataBaseConnection": "DataSource=Delivery.db; Cache=Shared"
  },

  "Kestrel": {

    "Limits": {
      "MaxConcurrentConnections": 100,

      "MaxRequestBodySizeInBytes": 10240,

      "MinRequestBodyDataRate": {
        "BytesPerSecond": 100,
        "GracePeriodInSeconds": 10
      },

      "MinResponseDataRate": {
        "BytesPerSecond": 100,
        "GracePeriodInSeconds": 10
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
